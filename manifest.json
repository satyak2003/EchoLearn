{
  "manifest_version": 3,
  "name": "EchoVision",
  "version": "1.0",
  "description": "AI-powered accessibility assistant for any website.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EchoVision"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
